<Window x:Class="tankmap.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tankmap"
        mc:Ignorable="d"
        Icon="./res/icon.png" FontSize="16" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
        Title="About..." Height="222" Width="320">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="8,4,8,4" IsDefault="True" Click="Button_Click">Close</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Image Width="48" Height="48" Source="./res/icon.png" VerticalAlignment="Top"/>
            <StackPanel Orientation="Vertical" Margin="16,0,0,0">
                <TextBlock FontSize="32" FontWeight="Bold">Tankmap</TextBlock>
                <TextBlock FontSize="22" Margin="0,8,0,0">Tankman Map Editor</TextBlock>
                <TextBlock Margin="0,8,0,0">Version 1.0</TextBlock>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
